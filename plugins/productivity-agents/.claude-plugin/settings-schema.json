{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Productivity Agents Configuration",
  "description": "Configuration schema for productivity-agents plugin",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference URL"
    },
    "atlassian": {
      "type": "object",
      "description": "Atlassian (Jira) configuration",
      "additionalProperties": false,
      "properties": {
        "defaultUrl": {
          "type": "string",
          "description": "Jira Cloud URL (e.g., yourcompany.atlassian.net)",
          "pattern": "^[a-zA-Z0-9-]+\\.atlassian\\.net$"
        },
        "user": {
          "type": "object",
          "description": "User information for Jira",
          "additionalProperties": false,
          "properties": {
            "accountId": {
              "type": "string",
              "description": "Atlassian Account ID (auto-detected via MCP)"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "User email address"
            },
            "displayName": {
              "type": "string",
              "description": "User display name"
            }
          },
          "required": ["accountId", "email"]
        }
      },
      "required": ["defaultUrl", "user"]
    },
    "github": {
      "type": "object",
      "description": "GitHub configuration",
      "additionalProperties": false,
      "properties": {
        "defaultUrl": {
          "type": "string",
          "description": "GitHub URL",
          "default": "github.com"
        },
        "user": {
          "type": "object",
          "description": "GitHub user information",
          "additionalProperties": false,
          "properties": {
            "username": {
              "type": "string",
              "description": "GitHub username"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "GitHub email"
            }
          },
          "required": ["username", "email"]
        },
        "defaultRepositories": {
          "type": "array",
          "description": "Pre-configured GitHub repositories for quick selection",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "alias": {
                "type": "string",
                "description": "Short alias for quick reference (e.g., 'api', 'web')"
              },
              "owner": {
                "type": "string",
                "description": "GitHub owner (user or organization)"
              },
              "repo": {
                "type": "string",
                "description": "Repository name"
              },
              "branch": {
                "type": "string",
                "description": "Default branch",
                "default": "main"
              }
            },
            "required": ["alias", "owner", "repo"]
          }
        }
      }
    },
    "gitlab": {
      "type": "object",
      "description": "GitLab configuration",
      "additionalProperties": false,
      "properties": {
        "defaultUrl": {
          "type": "string",
          "description": "GitLab URL (e.g., gitlab.com or self-hosted)",
          "default": "gitlab.com"
        },
        "user": {
          "type": "object",
          "description": "GitLab user information",
          "additionalProperties": false,
          "properties": {
            "username": {
              "type": "string",
              "description": "GitLab username"
            },
            "email": {
              "type": "string",
              "format": "email",
              "description": "GitLab email"
            }
          },
          "required": ["username", "email"]
        },
        "defaultRepositories": {
          "type": "array",
          "description": "Pre-configured GitLab repositories for quick selection",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "alias": {
                "type": "string",
                "description": "Short alias for quick reference (e.g., 'infra', 'deploy')"
              },
              "url": {
                "type": "string",
                "description": "GitLab URL (e.g., gitlab.com or gitlab.company.com)",
                "default": "gitlab.com"
              },
              "path": {
                "type": "string",
                "description": "Project path (e.g., 'group/project' or 'group/subgroup/project')"
              },
              "branch": {
                "type": "string",
                "description": "Default branch",
                "default": "main"
              }
            },
            "required": ["alias", "path"]
          }
        }
      }
    },
    "output": {
      "type": "object",
      "description": "Output configuration",
      "additionalProperties": false,
      "properties": {
        "retrospectivePath": {
          "type": "string",
          "description": "Default path for saving retrospectives",
          "default": "~/.claude/retrospectives"
        }
      }
    }
  }
}
