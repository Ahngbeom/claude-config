{
  "$schema": "https://raw.githubusercontent.com/Ahngbeom/claude-config/main/plugins/productivity-agents/.claude-plugin/settings-schema.json",
  "atlassian": {
    "defaultUrl": "yourcompany.atlassian.net",
    "user": {
      "accountId": "AUTO_DETECTED_OR_MANUAL",
      "email": "user@company.com",
      "displayName": "Your Name"
    }
  },
  "github": {
    "defaultUrl": "github.com",
    "user": {
      "username": "yourname",
      "email": "user@company.com"
    },
    "defaultRepositories": [
      {
        "alias": "api",
        "owner": "company",
        "repo": "backend-api",
        "branch": "main"
      },
      {
        "alias": "web",
        "owner": "company",
        "repo": "frontend-web",
        "branch": "main"
      }
    ]
  },
  "gitlab": {
    "defaultUrl": "gitlab.com",
    "user": {
      "username": "yourname",
      "email": "user@company.com"
    },
    "defaultRepositories": [
      {
        "alias": "infra",
        "url": "gitlab.company.com",
        "path": "devops/infrastructure",
        "branch": "main"
      },
      {
        "alias": "deploy",
        "url": "gitlab.com",
        "path": "company/deployment-configs",
        "branch": "main"
      }
    ]
  },
  "output": {
    "retrospectivePath": "~/.claude/retrospectives"
  }
}
